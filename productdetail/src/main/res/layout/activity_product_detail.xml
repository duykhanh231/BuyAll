<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetail">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerlayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#D3D3D3" />

    <ImageButton
        android:id="@+id/arrow"
        android:layout_width="48dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toTopOf="@id/headerlayout"
        app:layout_constraintStart_toStartOf="@id/headerlayout"
        android:layout_margin="5dp"
        android:src="@drawable/turnbackarrowdetail"
        android:contentDescription="Go back"
        />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="58dp"
        android:id="@+id/cart"
        app:layout_constraintTop_toTopOf="@id/headerlayout"
        app:layout_constraintEnd_toEndOf="@id/headerlayout"
        android:layout_margin="5dp"
        android:src="@drawable/cart"
        android:contentDescription="Go to cart"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerlayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#D3D3D3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#32CD32"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart"
            android:contentDescription="cart_description"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
        />

    </LinearLayout>


    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Mua ngay"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#FF6347"
    />

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- ScrollView for Product Details -->
    <ScrollView
        android:id="@+id/svPRODUCTDETAIL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerlayout"
        app:layout_constraintBottom_toTopOf="@id/footerlayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivPRODUCTIMAGE"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvProductPRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textColor="#FF6347"
                    android:textSize="30sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/tvShippingMethodandLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức vận chuyển và vị trí"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="8dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đánh Giá Sản Phẩm"
                    android:textStyle="bold"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/rbAverageComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:progressTint="#FFD700"
                        style="?android:attr/ratingBarStyleSmall" />
                    <TextView
                        android:id="@+id/tvRATE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="#FF6347"
                        android:layout_marginBottom="6dp"
                        android:text="sao trung bình" />
                </LinearLayout>
            </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvCOMMENT"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:nestedScrollingEnabled="false"
            android:layout_margin="5dp"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividerdetail"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:layout_constraintBottom_toTopOf="@+id/rcvproduct"
                />
            <TextView
                android:id="@+id/tvXEMTATCA"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Xem Tất Cả >"
                android:textColor="#FF6347"
                android:textStyle="bold"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dividerdetail"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:layout_constraintBottom_toTopOf="@+id/rcvproduct"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:layout_marginTop="8dp"
                android:text="Chi tiết sản phẩm"
                />
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/dividerdetail"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:layout_constraintBottom_toTopOf="@+id/rcvproduct"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:text="Mô tả sản phẩm"
                />
            <TextView
                android:id="@+id/tvProducdDESCRIPTION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="các dòng mô tả"
                />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
