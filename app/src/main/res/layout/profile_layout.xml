<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tv_profile_title"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="My Profile"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Section Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp">

            <!-- Profile Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:layout_marginTop="36dp">

                <ImageView
                    android:id="@+id/img_profile_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circular_background"
                    android:clipToOutline="true"
                    android:contentDescription="Profile Picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_picture" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BuyAll test"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buyall@mail.com"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- My Profile (Personal Information) -->
            <LinearLayout
                android:id="@+id/main_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Profile"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your personal information"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:id="@+id/chevron_icon"
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Profile Details) -->
            <LinearLayout
                android:id="@+id/sub_items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <!-- Fullname Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/sub_item_fullname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fullname: Loading..."
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <!-- Phone Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sub_item_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone: Loading..."
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <!-- Email Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sub_item_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email: Loading..."
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
            </LinearLayout>

            <!-- Các mục khác -->

            <!-- My Orders -->
            <LinearLayout
                android:id="@+id/my_orders_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border"
                android:clickable="true"
                android:onClick="toggleMyOrders">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Orders"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 2 orders"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Orders) -->
            <LinearLayout
                android:id="@+id/my_orders_sub_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <!-- Example of an order -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order #1"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
            </LinearLayout>


            <!-- Shipping Addresses -->
            <LinearLayout
                android:id="@+id/shipping_addresses_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border"
                android:clickable="true"
                android:onClick="toggleShippingAddresses">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shipping Addresses"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 3 addresses"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Shipping Addresses) -->
            <LinearLayout
                android:id="@+id/shipping_addresses_sub_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <!-- Example of an address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1234 Street Name"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
            </LinearLayout>


            <!-- Payment Methods -->
            <LinearLayout
                android:id="@+id/payment_methods_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border"
                android:clickable="true"
                android:onClick="togglePaymentMethods">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment Methods"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 1 payment method"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Payment Methods) -->
            <LinearLayout
                android:id="@+id/payment_methods_sub_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <!-- Example of a payment method -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credit Card #1234"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
            </LinearLayout>


            <!-- Discounts -->
            <LinearLayout
                android:id="@+id/discounts_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 1 discount"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Discount) -->
            <LinearLayout
                android:id="@+id/discounts_sub_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
            </LinearLayout>

            <!-- My Reviews -->
            <LinearLayout
                android:id="@+id/my_reviews_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Reviews"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have 2 reviews"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <ImageView
                    android:id="@+id/chevron_icon"
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Sub Items (Reviews) -->
            <LinearLayout
                android:id="@+id/my_reviews_sub_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
        </LinearLayout>


        <!-- Settings -->
            <LinearLayout
                android:id="@+id/settings_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Chevron Right"
                    android:src="@drawable/chevronright" />
            </LinearLayout>

            <!-- Khoảng cách ngăn cách phần Logout -->
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFFFFF" />

            <!-- Nút Logout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:onClick="onLogoutClick">

                <!-- Biểu tượng Logout -->

                <!-- Chữ Logout -->
                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Log out"
                    android:textColor="#000000"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_logout_icon"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logout Icon"
                    android:src="@drawable/logout_icon" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
