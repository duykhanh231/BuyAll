<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerlayoutscroll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#D3D3D3" />
    <TextView
        android:id="@+id/Boloctimkiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/headerlayoutscroll"
        app:layout_constraintStart_toStartOf="@id/headerlayoutscroll"
        android:text="Chọn Danh Mục"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerlayoutscroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llramfilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ramfilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ram"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llocungfilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/hardiskdrivefilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ổ Cứng"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llcpuintelfilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cpuintelfilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CPU Intel"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llcpuamdfilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cpuamdfilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CPU AMD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/llvganvidiafilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vganvidiafilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Vga Nvidia"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llvgaamdfilter"
                    android:layout_width="0dp"
                    android:layout_height="225dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/vgaamdfilter"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Vga AMD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>